<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.android.climatehero.TrackLightbulbs">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="all efficient lightbulbs"
        android:onClick="all" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some efficient lightbulbs"
        android:onClick="some" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="one efficient lightbulb"
        android:onClick="one" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="none"
        android:text="No Efficient lightbulbs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectImage"
        android:text="Select Image" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track next goal"
        android:onClick="trackNext" />

</LinearLayout>
