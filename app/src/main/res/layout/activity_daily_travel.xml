<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5DBCDB"
    tools:context="com.example.android.climatehero.TrackDiet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="Verdana"
        android:textSize="36dp"
        android:gravity="center"
        android:text="How did you get to work/school today?" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="bus or train"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:textSize="18dp"
        android:onClick="publicTrans"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="200dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="walk or bike"
        android:textColor="#FFFF"
        android:textSize="18dp"
        android:onClick="walkBike"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="110dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="car"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="car"
        android:fontFamily="verdana"
        android:layout_marginTop="275dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="plane"
        android:background="@drawable/blueicon"
        android:text="plane"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="200dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="trackGoal"
        android:layout_alignParentBottom="true"
        android:text="Track Goal" />


</RelativeLayout>
