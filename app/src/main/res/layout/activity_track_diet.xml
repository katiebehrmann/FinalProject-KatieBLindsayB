<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5DBCDB"
    tools:context="com.example.android.climatehero.TrackDiet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="Verdana"
        android:textSize="36dp"
        android:text="What did you eat today?" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="vegetarian"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:textSize="18dp"
        android:onClick="vegan"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="200dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="local grown food"
        android:textColor="#FFFF"
        android:textSize="18dp"
        android:onClick="vegetarian"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="110dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="chicken and fish based"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="omnivore"
        android:fontFamily="verdana"
        android:layout_marginTop="275dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="meat"
        android:background="@drawable/blueicon"
        android:text="red meat  based"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="200dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="backHome"
        android:layout_alignParentBottom="true"
        android:text="Back to Home" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Track next goal"
        android:layout_alignParentRight="true"
        android:onClick="trackNext"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
