<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.climatehero.TrackDiet">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ate vegan"
        android:onClick="vegan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ate vegetarian"
        android:onClick="vegetarian" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ate omnivorously"
        android:onClick="omnivore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="full bacon diet"
        android:onClick="meat" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track next goal"
        android:onClick="trackNext" />

</LinearLayout>
